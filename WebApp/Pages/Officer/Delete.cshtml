@page
@model WebApp.Pages.Officer.DeleteModel

@{
    ViewData["Title"] = "Delete Officer";
    if (Model.Error != null)
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
}

<div class="text-center">
    <p class="display-6 m-5 text-white">Delete an Officer</p>
</div>

<form method="post">
    <div class="d-flex flex-column justify-content-center align-items-center bgc-1 m-5 rounded-3 p-4">

        <div class="form-group m-3 w-50 text-center">
            <label class="text-white" asp-for="@Model.Officer.Name"></label>
            <p asp-for="@Model.Officer.Name" class="bg-white rounded  text-lg-center fs-3">@Model.Officer.Name</p>
        </div>

        <div class="form-group m-3 w-50 text-center">
            <label class="text-white" asp-for="@Model.Officer.Rank"></label>
            <p asp-for="@Model.Officer.Rank" class="bg-white rounded  text-lg-center fs-3">@Model.Officer.Rank</p>
        </div>

        <div class="form-group m-3 w-50 text-center">
            <label class="text-white" asp-for="@Model.Officer.SpaceStationId">Space Station ID</label>
            <p asp-for="@Model.Officer.SpaceStationId" class="bg-white rounded  text-lg-center fs-3">@Model.Officer.SpaceStationId</p>
        </div>

        <button type="submit" class="btn btn-danger btn-lg mt-4">Delete</button>
    </div>
</form>