@page "{action?}"
@model SpaceProgramWeb.Pages.OfficerPages.IndexModel
@{
    ViewData["Title"] = "Officer Index Page";
    if (Model.Error != null)
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
}

<a asp-page="/officer/Create" class="btn btn-success">Enroll a new Officer</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Rank</th>
            <th>Station Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var officer in Model.OfficerList)
        {
            <tr>
                <td>@officer.OfficerId</td>
                <td>@officer.Name</td>
                <td>@officer.Rank</td>
                <td>@officer.SpaceStationId</td>
                <td>
                    <a asp-page="/Edit" asp-route-id=@officer.OfficerId class="btn btn-warning">Edit</a>
                    <a asp-page="/Delete" asp-route-id=@officer.OfficerId class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>