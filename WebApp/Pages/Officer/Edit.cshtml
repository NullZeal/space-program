@page
@using WebApp.Business.DtoModels;
@model EditModel
@{
    ViewData["Title"] = "Edit Officer";
    if (Model.Error != null)
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
}

<div class="text-center">
    <p class="display-6 m-5 text-white">Modify an Officer</p>
</div>

<form method="post">
    <div class="d-flex flex-column justify-content-center align-items-center">

        <div class="form-group m-3 w-50">
            <label class="text-white" asp-for="@Model.Officer.Name"></label>
            <input asp-for="@Model.Officer.Name" class="form-control" />
            <span asp-validation-for="@Model.Officer.Name" class="text-danger"></span>
        </div>

        <div class="form-group m-3 w-50">
            <label class="text-white" asp-for="@Model.Officer.Rank"></label>
            <input asp-for="@Model.Officer.Rank" class="form-control" />
            <span asp-validation-for="@Model.Officer.Rank" class="text-danger"></span>
        </div>

        <div class="form-group m-3 w-50">
            <label class="text-white" asp-for="@Model.Officer.SpaceStationId">Space Station</label>
            <select asp-for="@Model.Officer.SpaceStationId" class="form-select" aria-label="Default select example">
                <option selected>Select a Space Station</option>
                @{
                    foreach (SpaceStationDto ss in Model.StationsList.OrderBy(x => x.Name).ToList())
                    {
                        <option value="@ss.SpaceStationId">@ss.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="@Model.Officer.SpaceStationId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info btn-lg mt-4">Modify</button>
    </div>
</form>