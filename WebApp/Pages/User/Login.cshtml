@page
@model WebApp.Pages.User.LoginModel

@{
    if (Model.Error != null)
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
}

<a asp-page="/user/signup" class="btn btn-success">Signup instead!</a>

<form method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.CurrentUser.Username"></label>
            <input asp-for="@Model.CurrentUser.Username" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.CurrentUser.Password"></label>
            <input type="password" asp-for="@Model.CurrentUser.Password" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
</form>